<% title "Item > #{@item.title}" %>

<div class="item film">
  <% if !@item.video_script.blank? %>
    <div class="video_script">
      <%= @item.video_script.html_safe %>
    </div>
  <% end %>

  <div class="pics">
    <ul>
      <% @item.pics.each do |pic| %>
        <li><%= image_tag pic.attach(:front_big) %></li>
      <% end %>
    </ul>
  </div>

  <div class="info">
    <div class="title"><%= @item.title %></div>
    <div class="text">
      <%= @item.text.to_md %>
    </div>
  </div>
</div>