<!DOCTYPE html>
<html>
  <head>
    <%= render "layouts/front/header" %>
  </head>

  <body>
    <div id="wrapper">
      <div id="email" class=""><a href="mailto:me@linoescalera.com">me@linoescalera.com</a></div>

      <div id="header">
        <a href="./home.html">
        <%= link_to root_path do %>
          <div id="logo" class="">
            <div class="main">Lino Escalera</div>
            <div class="sub">Film &amp; Commercial Director</div>
          </div>
        <% end %>

        <div id="menu" class="">
          <ul class="left">
            <li class="work main">Work</li>
            <li class="film <%= menu_class(:film) %>"><%= link_to "Film", front_collection_path(Item::COLLECTIONS[:film]) %></li>
            <li class="commercials <%= menu_class(:commercial) %>"><%= link_to "Commercial", front_collection_path(Item::COLLECTIONS[:commercial]) %></li>
            <li class="branded_content <%= menu_class(:brand) %>"><%= link_to "Branded Content", front_collection_path(Item::COLLECTIONS[:brand]) %></li>
          </ul>

          <ul class="right">
            <li class="follow main">Follow</li>
            <li class="about"><a href="./about.html">About</a></li>
            <li class="facebook"><a href="http://facebook.com">Facebook</a></li>
            <li class="twitter"><a href="http://twitter.com">Twitter</a></li>
          </ul>
        </div>
      </div>

      <div id="content">
        <%= yield %>
      </div>
    </div>

    <%= render "layouts/front/footer" %>
    <%= render "shared/analytics" %>
  </body>
</html>

