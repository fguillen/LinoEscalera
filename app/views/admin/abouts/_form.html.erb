<%= form_for [:admin, @page], :url => admin_about_path, :html => { :class => "form-horizontal" } do |f| %>
  <%= render "/admin/shared/form_errors", :object => f.object %>

  <div class="control-group">
    <%= f.label :text, :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :text, :class => "span8 mdm-input", :rows => "10" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :text_es, :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :text_es, :class => "span8 mdm-input", :rows => "10" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>

